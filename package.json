{
  "name": "jsorolla",
  "version": "2.0.0-beta",
  "description": "JSorolla is a JavaScript Library for biological and genomic data visualization.",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencb/jsorolla.git"
  },
  "scripts": {
    "build-network-viewer": "./build-network-viewer.sh",
    "core": "cd src/core && cat *.js cache/*.js clients/*.js data-adapter/*.js data-source/*.js visualisation/*.js > ../../dist/core.js && cd ../.. && node_modules/uglify-es/bin/uglifyjs dist/core.js -o dist/core.min.js",
    "genome-browser": "cd src/genome-browser && cat *.js renderers/*.js tracks/*.js > ../../dist/genome-browser.js && cd ../.. && node_modules/uglify-es/bin/uglifyjs dist/genome-browser.js -o dist/genome-browser.min.js",
    "dist": "rm -rf dist && mkdir dist && npm run core && npm run genome-browser"
  },
  "license": "GPL-2.0",
  "dependencies": {
    "@polymer/polymer": "~2.0.2",
    "@webcomponents/webcomponentsjs": "~1.0.2",
    "@webcomponents/shadycss": "~1.0.1",
    "client-line-navigator": "git://github.com/anpur/client-line-navigator",
    "cookies-js": "~1.1.0",
    "crypto-js": "~3.1.8",
    "d3": "3.5.3",
    "font-awesome": "*",
    "highcharts": "~4.2.7",
    "jquery": "~2.2.4",
    "pako": "~0.2.8",
    "qtip2": "~3.0.3",
    "backbone": "~1.3.3",
    "underscore": "~1.8.3",
    "urijs": "~1.18.10",
    "pdfmake": "~0.1.20",
    "file-saver": "~1.3.2",
    "cytoscape": "~2.5.4",
    "async": "^2.1.2"
  },
  "devDependencies": {
    "eslint": "~4.3.0",
    "eslint-config-airbnb": "~15.1.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-react": "^7.1.0",
    "grunt": "^0.4.5",
    "grunt-contrib-clean": "~1.0.0",
    "grunt-contrib-concat": "~1.0.0",
    "grunt-contrib-copy": "~1.0.0",
    "grunt-contrib-jshint": "~1.0.0",
    "grunt-contrib-qunit": "~1.1.0",
    "grunt-contrib-rename": "0.0.3",
    "grunt-contrib-uglify": "~1.0.1",
    "grunt-contrib-watch": "~1.0.0",
    "grunt-vulcanize": "~1.0.0",
    "grunt-curl": "~2.2.0",
    "grunt-html-build": "~0.5.3",
    "grunt-hub": "~0.7.0",
    "grunt-processhtml": "~0.3.13",
    "grunt-replace": "~0.11.0",
    "js-beautify": "~1.6.2",
    "vulcanize": "~1.14.8",
    "crisper": "~2.0.1",
    "uglify-es": "~3.0.28"
  }
}
